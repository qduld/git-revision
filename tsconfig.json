{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node"],
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
